pipeline{

agent any

tools{
maven 'maven3.9.6'
}


stages{

  stage('CheckOutCode'){
    steps{
    git 'https://github.com/nakkinalokesh/maven-web-application.git'
	
}
}
stage('Build'){
  steps{
  sh  "mvn clean package"
  }
  }
stage('DeployAppIntoTomcat'){
steps{
  sshagent(['Tomcat Credentials']) {
  sh "scp -o StrictHostKeyChecking=no target/maven-web-application.war ec2-user@172.31.15.80:/opt/apache-tomcat-9.0.86/webapps"    
  }
  }
  }


}
}
  
